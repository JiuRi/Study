<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#8888"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/audioSwich_btn"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_bt_login"
        android:text="按住录音"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<android.support.v7.widget.RecyclerView
    android:layout_marginTop="3dp"
    android:choiceMode="singleChoice"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_above="@id/audioSwich_btn"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/recording_Content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="187dp"
        android:layout_height="187dp"
        android:background="@mipmap/bg_sound"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/record" />

            <ImageView
                android:id="@+id/iv_volume"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:scaleType="fitStart"
                android:src="@mipmap/p1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>